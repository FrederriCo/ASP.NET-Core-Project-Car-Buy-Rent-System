@model DealerFormServiceModel

@{ ViewData["Title"] = "Create Dealer"; }


<h1 class="display-4 text-center"><i class="fas fa-plus" style="color: darkorange"></i>Create Dealer</h1>

<form method="post" asp-action="Create" style="padding-top:30px;">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Dealer Name...." />
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number...." />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Add" class="btn btn-outline-warning text-light" style="background-color: darkorange" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
