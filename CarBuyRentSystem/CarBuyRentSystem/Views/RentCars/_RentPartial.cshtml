@model RentCarBindingModel

<div class="mx-auto" style="padding-top:20px;">
    <form asp-controller="RentCars" asp-action="Rent" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StartDate" class="control-label">Start Date </label>
            <input asp-for="StartDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" date class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="control-label">End Date</label>
            <input asp-for="EndDate" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class=" form-group mx-auto">
            <button type="submit" class="btn btn-outline-warning text-light" style="background-color: darkorange"> Rent</button>
        </div>
        <input type="hidden" asp-for="CarId" value="@Model.CarId">
    </form>
</div>

