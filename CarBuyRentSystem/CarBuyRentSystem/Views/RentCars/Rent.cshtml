@model CarServiceListingViewModel
@{ ViewData["Title"] = "Rent"; }

<h1 class="display-4 text-center"><i class="fas fa-money-check-alt" style="color: darkorange"></i> Rent</h1>

<div class="row">
    <div class="mx-auto">
        <img src="@Model.ImageUrl" class="mx-auto d-block" />

        <h3 class="text-center">@Model.Brand @Model.Model</h3>
        <hr />
        <h4 class="text-center">@Model.RentPricePerDay$ / day</h4>
        <div class="form-group text-center">
            @await Html.PartialAsync("_RentPartial", new RentCarBindingModel
            {
                CarId = Model.Id
            })
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}