@model IEnumerable<CarServiceListingViewModel>
@{
    ViewBag.Title = "Administration Area";
}
<h1>All Cars</h1>

<div style="background-color:white">

<table class="table table-striped">
    <thead class="thead-dark">
            <tr>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Category</th>               
                <th scope="col">Location</th>
                <th scope="col">Price</th>
                <th scope="col">Rent Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td scope="col">@car.Brand</td>
                    <td scope="col">@car.Model</td>
                    <td scope="col">@car.Year</td>
                    <td scope="col">@car.Category</td>                    
                    <td scope="col">@car.Locaton</td>
                    <td scope="col">@car.Price</td>
                    <td scope="col">@car.RentPricePerDay</td>
                    <td scope="col">                    
                        <a asp-area="" asp-controller="Cars" asp-action="Details" asp-route-id="" class="btn btn-danger float-right ml-3">More</a>
                        <a asp-area="" asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="btn  btn-warning float-right ml-3">Edit</a>
                        <a asp-area="" asp-controller="Car" asp-action="Delete" asp-route-id="" class="btn  btn-danger float-right ml-3">Delete</a>
                    </td>
                </tr>
            }
        
</table>
</div>