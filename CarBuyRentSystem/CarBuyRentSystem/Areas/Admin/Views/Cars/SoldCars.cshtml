@model IEnumerable<SoldCarsViewModel>
@{ ViewData["Title"] = "SoldCars"; }

@{ decimal totalIncome = 0; }

<h1 class="display-4 text-center"><i class="fas fa-hand-holding-usd" style="color: darkorange"></i> Sold Cars</h1>

<h5 class="text-center" style="padding-top:50px;"><i class="fas fa-car" style="color:darkorange;"></i> @Model.Count() sold</h5>
<br />

<div style="background-color:white">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">User</th>
                <th scope="col">Car</th>
                <th scope="col">Date</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                totalIncome += car.Price;

<tr>
    <td scope="col">@car.User</td>
    <td scope="col">@car.Car.Brand @car.Car.Model</td>
    <td scope="col">@car.BoughtOn.Date.ToShortDateString()</td>
    <td scope="col">@car.Price</td>
</tr>}
        </tbody>
    </table>
    <h5 class="text-center"><i class="fas fa-money-bill-alt" style="color:darkorange;"></i> @totalIncome$ earned</h5>
    <hr class="w-50" />
</div>